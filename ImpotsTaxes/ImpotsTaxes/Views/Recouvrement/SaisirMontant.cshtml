@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>SaisirMontant</title>
    <link type="text/css" rel="stylesheet" href="../../Content/designComposant.css" /> 
    <link type="text/css" rel="stylesheet" href="../../Content/clignotement.css" />
    <script type="text/javascript" src="../../Content/etablirMED.js"></script>
</head>
<body id="SaisirMontant" onload="processus('SaisirMontant','@Request.Params["action"]');">

    <div>
        <h2 style="text-align:center;text-decoration:underline;">ETABLIR LES MISES EN DEMEURE</h2>
    </div>

    <div id="processus" style="position:absolute; top:60px; left:10px; width:800px; z-index:2;">
        <h1 style="text-align:center;">PROCESSUS</h1>
    </div>

    <div id="feuille" style="position:absolute; top:150px; left:600px; width:500px; background-color:aliceblue;">
        <form method="post" action="/Recouvrement/AssujettisMED?action=@Request.Params["action"]&mont=@Request.Form["mont"]&monn=@Request.Form["monn"]&inf=0&sup=8">
            <fieldset>
                <legend>
                    Montant et Monnaie
                </legend>
                <table>
                    <tr>
                        <td>Montant:</td>
                        <td><input type="text" name="mont" id="montant" required /></td>
                    </tr>
                    <tr>
                        <td>Monnaie:</td>
                        <td>
                            <select name="monn" id="monnaie" required>
                                <option></option>
                                <option>USD</option>
                                <option>FC</option>
                            </select>
                        </td>
                    </tr>
                    <!--<tr>
                        <td>Monnaie:</td>
                        <td><input type="text" name="monn" id="monnaie" required /></td>
                    </tr>-->

                </table>
            </fieldset>

        </form>

        <button name="suivant" onclick="AssujettiMED();">Envoyer</button>

        <script>
            function AssujettiMED() {
                window.location.href = '/Recouvrement/AssujettisMED?action=@Request.Params["action"]&mont=' + document.getElementById("montant").value + '&monn=' + document.getElementById("monnaie").value + '&inf=0&sup=10';
            }
        </script>
    </div>
</body>
</html>
