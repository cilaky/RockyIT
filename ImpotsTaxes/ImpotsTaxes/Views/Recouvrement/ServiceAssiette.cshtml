@using ImpotsTaxes.Models;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>ServiceAssiette</title>
    <link type="text/css" rel="stylesheet" href="../../Content/designComposant.css" /> 
    <link type="text/css" rel="stylesheet" href="../../Content/clignotement.css" />
    <link type="text/css" rel="stylesheet" href="../../Content/styleTable.css" />
    <script type="text/javascript" src="../../Content/etablirMED.js"></script>
</head>
<body id="SelectAntenne" onload="processus('ServiceAssiette','@Request.Params["action"]');">
    <div>
        <h2 style="text-align:center;text-decoration:underline;">ETABLIR LES MISES EN DEMEURE</h2>
    </div>

    <div style="position:absolute; top:60px; left:900px; width:800px; z-index:1;">
        <table >
			<tr>
                <th>N°</th>
                <th>ID SERVICE</th>
                <th>SERVICE D'ASSIETTES</th>
            </tr>
                @{ListesMED lst = new ListesMED();}
                @foreach (Entite serviceAssiette in lst.ListServAss())
                {
                    <tr>
                            <td>@serviceAssiette.nbre</td>
                            <td>@serviceAssiette.entity_id</td>     
                            <td><a href="/Recouvrement/AssujettisMED?action=@Request.Params["action"]&ServAss=@serviceAssiette.entity_id&inf=0&sup=10">@serviceAssiette.entity_name</a></td>     
                    </tr>
                }
        </table>
    </div>
    
    <div id="processus" style="position:absolute; top:60px; left:10px; width:800px; z-index:2;">
        <h1 style="text-align:center;">PROCESSUS</h1>
    </div>
</body>
</html>
